    "description": "Nim component bundle",
    "keywords": ["nim", "ngo", "humanitarian", "components"],
    "homepage": "https://github.com/NgoInformationManagement/NimComponent",
    "license": "MIT",

    "authors": [
        {
            "name": "aRn0D",
