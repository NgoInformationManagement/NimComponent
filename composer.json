        }
    ],

    "minimum-stability": "dev",

    "target-dir": "NIM/Component",

    "require": {
        "php": ">=5.3.3",
        "symfony/framework-bundle": "~2.3",
        "doctrine/doctrine-bundle": "dev-master"
